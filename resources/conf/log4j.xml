<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

  <appender name="CA" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%-4r [%t] %-5p %c %x - %m%n" />
    </layout>
  </appender>

  <!--  TODO MBW: Remove this repetitions -->
  <appender name="FA" class="org.apache.log4j.FileAppender">
    <param name="File" value="comm.log" />
    <param name="Threshold" value="DEBUG" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%-4r [%t] %-5p %c %x - %m%n" />
    </layout>
  </appender>

  <appender name="FA-bdb" class="org.apache.log4j.FileAppender">
    <param name="File" value="bdb.log" />
    <param name="Threshold" value="DEBUG" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%-4r [%t] %-5p %c %x - %m%n" />
    </layout>
  </appender>
  
  <logger name="org.nebulostore.communication.bdbdht.tests.BdbPeerTest">
    <level value="DEBUG"/>
    <appender-ref ref="CA" />
    <appender-ref ref="FA-bdb"/>
  </logger>

  <logger name="org.nebulostore.communication.bdbdht.BdbPeer">
    <level value="DEBUG"/>
    <appender-ref ref="CA" />
    <appender-ref ref="FA-bdb"/>
  </logger>
  
  <root>
    <level value="DEBUG" />
    <appender-ref ref="CA" />
    <appender-ref ref="FA" />
  </root>
</log4j:configuration>